<%- include('../partials/template') %>
  <h1>Your Flight List</h1>
  <table>
      <thead>
          <tr>
              <th style = "color: white;" >Airline</th>
              <th style = "color: white;" >Flight #</th>
              <th style = "color: white;" >Departs</th>
          </tr>
      </thead>
      <tbody style = "color: white;" >
          <% flights.forEach(function(f) { %>
              <tr>
                  <td><%= f.airline %></td>
                  <td><%= f.flightNo %></td>
                  <% if (f.departs < new Date()) { %>
                  <td style = "color: red"> <%= f.departs %> </td>
                  <% } else { %>
                    <td> <%= f.departs %> </td>
                    <% } %>
              </tr>
          <% }); %>
      </tbody>
  </table>
</body>
</html>
<%- include('../partials/template') %>
<body>
    <h1>Enter a New Flight</h1>
    <form action="/flights" method="POST">
        <label>Airline:
            <select name="airline">
                <option value="United">United</option>
                <option value="American">American</option>
                <option value="Southwest">Southwest</option>
            </select>
        </label><br>
        <label>Flight No:
          <input type="number" name="flightNo">
        </label><br>
        <label>Departs:
            <input class=localTime type="datetime-local" name="departs">
        </label><br>
        <input type="submit" value="Add Flight">
    </form>   
</body>
</html>
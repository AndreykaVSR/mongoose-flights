<%- include('../partials/template') %>
  <h1>Your Selected Flight Details</h1>
  <table id = "tableFlight">
      <thead>
          <tr>
              <th style = "color: rgb(80, 79, 79);" >Airline</th>
              <th style = "color: rgb(80, 79, 79);" >Flight #</th>
              <th style = "color: rgb(80, 79, 79);" >Departs</th>
          </tr>
      </thead>
      <tbody id = "tblBodyFlights">
              <tr>
                  <td><%= flight.airline %></td>
                  <td><%= flight.flightNo %></td>
                  <% if (flight.departs < new Date()) { %>
                  <td style = "color: rgb(143, 2, 2)"> <%= flight.departs %> </td>
                  <% } else { %>
                    <td> <%= flight.departs %> </td>
                    <% } %>
              </tr>
      </tbody>
  </table>
  <%- include('../partials/footer') %>